<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Banner / Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/logorestaurante"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ====== Pastel de Choclo ====== -->
    <ImageView
        android:id="@+id/imgPastel"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/pastel"
        android:src="@drawable/pastel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <TextView
        android:id="@+id/tvPastelTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pastel"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imgPastel"
        app:layout_constraintTop_toTopOf="@id/imgPastel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvPastelCantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cant"
        app:layout_constraintStart_toStartOf="@id/tvPastelTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvPastelTitulo"/>

    <EditText
        android:id="@+id/etPastelCant"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvPastelCantLabel"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPastelCantLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvPastelSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        app:layout_constraintStart_toStartOf="@id/tvPastelTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvPastelCantLabel"
        android:layout_marginTop="6dp"/>

    <!-- ====== Cazuela ====== -->
    <ImageView
        android:id="@+id/imgCazuela"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/cazuela"
        android:src="@drawable/cazuela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPastel" />

    <TextView
        android:id="@+id/tvCazuelaTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cazuela"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imgCazuela"
        app:layout_constraintTop_toTopOf="@id/imgCazuela"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvCazuelaCantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cant"
        app:layout_constraintStart_toStartOf="@id/tvCazuelaTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvCazuelaTitulo"/>

    <EditText
        android:id="@+id/etCazuelaCant"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tvCazuelaCantLabel"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCazuelaCantLabel"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvCazuelaSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        app:layout_constraintStart_toStartOf="@id/tvCazuelaTitulo"
        app:layout_constraintTop_toBottomOf="@id/tvCazuelaCantLabel"
        android:layout_marginTop="6dp"/>

    <!-- ====== Totales ====== -->
    <TextView
        android:id="@+id/tvComidaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="@string/comida"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCazuelaSubtotal" />

    <TextView
        android:id="@+id/tvComidaMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        app:layout_constraintBaseline_toBaselineOf="@id/tvComidaLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPropinaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/propina"
        app:layout_constraintStart_toStartOf="@id/tvComidaLabel"
        app:layout_constraintTop_toBottomOf="@id/tvComidaLabel" />

    <Switch
        android:id="@+id/swPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPropinaLabel"
        app:layout_constraintStart_toEndOf="@id/tvPropinaLabel"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvPropinaMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        app:layout_constraintBaseline_toBaselineOf="@id/tvPropinaLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/total"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvComidaLabel"
        app:layout_constraintTop_toBottomOf="@id/tvPropinaLabel" />

    <TextView
        android:id="@+id/tvTotalMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTotalLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>